.content {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 30rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
}

.content_left {
  position: relative;
}

.content_left_img {
  width: 180rpx;
  height: 190rpx;
  border-radius: 10rpx;
}

.content_left_type-tag {
  padding: 10rpx;
  /* 文本最大的宽度 */
  width: max-content;
  background-color: #333333;
  color: #fff;
  opacity: .7;
  font-size: 14rpx;
  z-index: 2;
  position: absolute;
  right: 0;
}

.content_right {
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content_row {
  display: flex;
  align-items: center;
}
.content_row4{
  justify-content: space-between;
}

.content_title{
  min-width: 150rpx;
  max-width: 340rpx;
  font-size: 32rpx;

  /* 超出部分显示省略号 */
  /* 非标准属性 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.content_category{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.content_category_text{
  margin-left: 10rpx;
}

.content_publisher{
  display: flex;
  align-items: center;
}
.content_publisher_avatar_pic{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.content_publisher_nickname{
  margin-left: 10rpx;
}
.content_score{
  color: #f57013;
  margin-left: 30rpx;
}

.content_create-time{
  color: #333333;
}

.content_price{
  font-size: 32rpx;
  color: #ff0000;
  float: left;
}

.content_sales{
  color: #333333;
  float: right;
}