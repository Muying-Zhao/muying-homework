.wrapper {
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #efefef;
  width: 100%;
}

.service {
  padding-bottom: 300rpx;
}

.info {
  width: 100%;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.info_img image{
  width: 100%;
}

.info_row{
  display: flex;
    align-items: center;
    margin-top: 30rpx;
    padding: 0rpx 30rpx;
}
.info_row_title{
  font-size: 32rpx;
    font-weight: bold;
}
.info_row_category{
  display: flex;
    align-items: center;
    margin-left: 20rpx;
}
.info_row_category_text{
  margin-left: 10rpx;
}
.info_row_score{
  margin-left: 30rpx;
    color: #f27013;
}
.info_row_price{
  font-size: 32rpx;
    color: red;
}
.info_row_price_label{
  font-size: 24rpx;
}
.row_space_between{
  justify-content: space-between;
}
.status, .evaluation{
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  background-color: #fff;
}
.status{
  display: flex;
    align-items: center;
    justify-content: space-between;
}

.evaluation{
  min-height: 500rpx;
}
.evaluation_title{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #efefef;
}
.evaluation_list{
  margin-top: 30rpx;
}
.evaluation_item{
  margin-bottom: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #efefef;
}
.actbar{
  box-sizing: border-box;
    border-top: 1px solid #efefef;
    background-color: #fff;
    padding: 30rpx 30rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 2;
}
